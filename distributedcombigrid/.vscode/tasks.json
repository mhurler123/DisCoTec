    // for the documentation about the tasks.json format

{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "scons build",
            "command": "scons",
            "type": "shell",
            "group": "build",
            "options": {
                "cwd": "${workspaceRoot}/..",//"/home/freifrau/Desktop/phd/mario/combi"
            },
            "showOutput": "always",
            "args": [
                "-j4",
                "SG_JAVA=0",
                "COMPILE_BOOST_TESTS=1",
                "SG_ALL=0 ",
                "SG_DISTRIBUTEDCOMBIGRID=1 ",
                "VERBOSE=1",
                "RUN_BOOST_TESTS=0",
                "RUN_CPPLINT=0",
                "BUILD_STATICLIB=0",
                "CXX=mpicxx.mpich",
                "OPT=1",
                "CPPFLAGS=-g"
            ],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "export lib",
            "command": "export",
            "type": "shell",
            "group": "build",

            "showOutput": "always",
            
            "args": [
                "LD_LIBRARY_PATH=${workspaceRoot}/../home/freifrau/Desktop/phd/mario/combi/lib/sgpp:$LD_LIBRARY_PATH"
            ],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "boost tests",
            "command": "mpirun.mpich",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "showOutput": "always",
            "args": [
                "-n", "9",
                "${workspaceRoot}/tests/test_distributedcombigrid_boost"
            ],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "options": {
                "env": {
                    "LD_LIBRARY_PATH": "${workspaceRoot}/../lib/sgpp:$LD_LIBRARY_PATH"
                }
            },    
        }
    ]
}